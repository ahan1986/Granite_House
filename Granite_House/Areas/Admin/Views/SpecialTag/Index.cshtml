@model IEnumerable<Granite_House.Models.SpecialTag>
@{
    ViewData["Title"] = "Index";
}

<!--Generate all the list in the database on this Razor Page-->

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tags List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; New Special Tag</a>
    </div>
</div>
<br/>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(m => item.Name)
                </th>
                <th>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </th>
            </tr>
        }
    </table>
</div>